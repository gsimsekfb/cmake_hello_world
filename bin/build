#!/usr/bin/env bash

echo "Clean and re-build ... "
echo "-------------------------------------"

cd ..
rm -rf build
mkdir build
cd build

### 1. Regular build
# cmake ..         # conf
# cmake --build .  # build

### 2. scan-build (clang-10, c++17)
scan-build -v --use-analyzer /usr/local/opt/llvm/bin/clang++ cmake ..
make

### 3. scan-build (clang-4)
# scan-build -v --use-analyzer /usr/local/bin/clang++ cmake ..
# make

